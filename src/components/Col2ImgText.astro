---
import { Image } from "astro:assets";

const {imagen, imagenTexto, title, text1, text2, text3} = Astro.props.data;
---

<main class="main">
  <div class="bloque-imagen" >
    <Image src={imagen} alt={imagenTexto} width={550} sizes="(max-width: 900px) 400px, 900px"  class="imagen-perfil" loading="eager" decoding="async"/>
  </div>
  <div class="bloque-texto">
    <h3 class="subtitle">{title}</h3>
    <p  class="texto1">{text1}</p>
    <p class="texto1">{text2}</p>
    <p  class="texto1">{text3}</p>
  </div>
</main>

<style>
  .main {
    display: flex;
    flex-flow: row wrap;
    justify-content: space-between;
    align-items: center;
    gap: 20px;
  }

  .bloque-imagen {
    width: calc(50% - 20px);
  }

  .bloque-texto {
    width: calc(50% - 20px);
  }

  .imagen-perfil {
    width: 100%;
    vertical-align: middle;
  }

  .subtitle {
    font-size: 24px;
    font-weight: 600;
    margin-bottom: 18px;
    text-transform: uppercase;
    color: var(--color-bg1-text3);
    font-family: var(--font-family2);
  }

  .texto1 {
    color: #727272;
    font-family: var(--font-family1);
    line-height: 22px;
    font-size: 16px;
    font-weight: 300;
  }

  @media (width <= 800px) {
    .main {
      flex-direction: column;
    }
    .bloque-imagen {
      width: 90%;
    }
    .bloque-texto {
      width: 90%;
    }
  }
</style>
