---
import { Icon } from 'astro-icon/components'
import ThemeIcon from './ThemeIcon.astro'
import { getRelativeLocaleUrl } from 'astro:i18n';

const { index, about, portfolio, gallery, contact, lang } = Astro.props;

const pathnameFr = Astro.url.pathname.replace(Astro.currentLocale || '', 'fr');
const pathnameEn = Astro.url.pathname.replace(Astro.currentLocale || '', 'en');
const pathnameEs = Astro.url.pathname.replace(Astro.currentLocale || '', 'es');

---
<header class="headerNav">
  <div class="nav">
    <input type="checkbox" id="nav-check">
    <div class="nav-header">
        <a href="index.html">EALEJANDROH</a>
    </div>
    <div class="nav-btn">
      <label for="nav-check">
        <span></span>
        <span></span>
        <span></span>
      </label>
    </div>
    
    <div class="nav-links">
        <a href="index.html">{index}</a>
        <a href="about.html">{about}</a>
        <a href="portfolio.html">{portfolio}</a>
        <a href="gallery.html">{gallery}</a>
        <a href="contact.html">{contact}</a>
        <li class="dropdown">
            <span class="dropbtn idioma">
                <Icon name="lang" /> {lang} <Icon name="down" />
            </span>
            <div class="dropdown-content">
                <ul>
                    <li><a href={pathnameEs}>Espa√±ol</a></li>
                    <li><a href={pathnameEn}>Ingles</a></li>
                    <li><a href={pathnameFr}>Frances</a></li>
                </ul>
            </div>
        </li>
        <ThemeIcon />
    </div>
  </div>
</header>

<style>
header{
  background-color: var(--color-bg1);
  z-index: 1030;
  box-shadow: 0 0 3px 0 rgba(0, 0, 0, 0.1);
  border-bottom: 1px solid var(--color-bg1-sombra);
  position: sticky;
  top: 0px;
}

.nav {
  padding: 25px 0;
  box-shadow: none;
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: var(--with-container);
  margin: 0px auto;
}

.nav-header > a {
  display: inline-block;
  font-family: var(--font-family2);
  font-weight: bold;
  color: var(--color-bg1-text2);
  font-size: 1.2em;
  margin: 0px 5px 0px 20px;
}

.nav-links {
  display: inline;
  float: right;
}

.nav-links a {
  display: inline-block;
  padding: 2px 10px 2px 10px;
  text-decoration: none;
  color: var(--color-bg1-text1);
}

.nav-links a, .idioma {
    font-size: 14px;
    font-weight: 500;
    border-bottom: 2px solid transparent;
    text-transform: uppercase;
    cursor: pointer;
}

.nav-links a:hover, .idioma:hover{
    color: var(--color-bg1-text2);
}

.nav > .nav-btn {
  display: none;
}

.nav > #nav-check {
  display: none;
}

@media (width <= 800px) {
  .nav > .nav-btn {
    display: inline-block;
    position: absolute;
    right: 0px;
    top: 0px;
  }
  .nav > .nav-btn > label {
    display: inline-block;
    width: 50px;
    height: 50px;
    padding: 13px;
  }
  .nav > .nav-btn > label:hover,.nav  #nav-check:checked ~ .nav-btn > label {
    background-color: var(--color-bg1-text1);
  }
  .nav > .nav-btn > label > span {
    display: block;
    width: 25px;
    height: 10px;
    border-top: 2px solid #eee;
  }
  .nav > .nav-links {
    position: absolute;
    display: block;
    width: 100%;
    background-color: var(--color-bg1-text1);
    height: 0px;
    transition: all 0.3s ease-in;
    overflow-y: hidden;
    top: 50px;
    left: 0px;
  }
  .nav > .nav-links > a, .idioma {
    display: block;
    width: 100%;
    color: var(--color-bg1);
    margin: 8px 0 8px 0;
  }
  .idioma {
    margin-left: 10px;
  }
  .nav > #nav-check:not(:checked) ~ .nav-links {
    height: 0px;
  }
  .nav > #nav-check:checked ~ .nav-links {
    height: 300px;
    overflow-y: auto;
  }
}


.dropdown {
  position: relative;
  display: inline-block;
}

.dropdown-content {
  display: none;
  position: absolute;
  background-color: var(--color-bg1);
  box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
  z-index: 1;
}

.dropdown-content ul {
  padding: 12px 16px;
  text-decoration: none;
  display: block;
  display: flex;
  flex-direction: column;
  gap: 5px;
}

.dropdown:hover .dropdown-content {
    display: block;
}

@media screen and (width <= 800px) {
  .headerNav a:not(:first-child) {display: none;}
  .headerNav a.icon {
    float: right;
    display: block;
  }
}

</style>
