---
const {title} = Astro.props;
---
<section class="global-page-header">
    <h2>{title}</h2>
</section>

<style>
.global-page-header {
    padding: 15px 0px 30px 0px;
    background: var(--color-bg2);
    text-align: center;
    width: 100%;
}
h2 {
    font-size: 42px;
    font-weight: bold;
    text-transform: uppercase;
    color: var(--color-bg2-text1);
}
</style>