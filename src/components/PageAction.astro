---
const {titulo, texto1, texto2, boton} = Astro.props;
---
<section>
    <h2>{titulo}</h2>
    <p>{texto1}<br/>{texto2}</p>
    <a href="contact.html">{boton}</a>
</section>

<style>
section{
    padding: 15px 0px 30px 0px;
    background: var(--color-bg2);
    text-align: center;
}
h2 {
    font-size: 42px;
    font-weight: bold;
    text-transform: uppercase;
    color: var(--color-bg2-text1);
}
p{
    color: var(--color-bg2-text1);
}
a{
    display: inline-block;
    background: var(--color-bg2-text1);
    border: none;
    color: var(--color-bg2);
    padding: 16px 35px;
    margin-top: 20px;
    font-size: 12px;
    letter-spacing: 2px;
    text-transform: uppercase;
    border-radius: 0;
}
</style>